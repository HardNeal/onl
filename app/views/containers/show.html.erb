<hr>
<center>
  <%= form_tag(bazar_podrazdel_container_products_path(bazar_id: @bazar.id, podrazdel_id: @podrazdel.id, container_id: @container.id), :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "      Текст для поиска", style: 'width: 17; font-size: 17px;' %>
      <%= submit_tag "Поиск", :name => nil, class: 'btn btn-default', style: 'border-radius: 10px;' %>
  <% end %>
</center>

<p></p>
<p>
<%= link_to "Вернуться к контейнерам", bazar_podrazdel_path(@bazar.id, @podrazdel.id), class: 'btn btn-default', style: 'margin-left: 10px;' %>
</p>
<center>
    <div class="row row-category">
      <div class="col-md-3">
        <% @container.products.each do |p| %>
      </div>
    </div>

    <div class="">
      <div class="col-md-4">
        <div class="thumbnail" style="border-radius: 28px; border: 1px solid silver; background: rgba(255, 255, 255, 0.69);">
          <h1>
          <p><div class="post-meta"><h4><b><%= p.name %></b></h4></div></p>
          </h1>
          <a><%= link_to 'Посмотреть товар', bazar_podrazdel_container_product_path(@bazar.id, @podrazdel.id, @container.id, p.id), class: "button24", style: 'font-size: 12px;'%>
          </p>
          <p>
            <% if p.image == nil? %>
             <img href="/img/pr.png">
            <% else %>
             <%= image_tag p.image.url(:medium), style: 'border-radius: 15px;' %></p>
            <% end %>
          <p>
          <% end %>
        </div>
      </div>
    </div>
</center>








<style type="text/css">

