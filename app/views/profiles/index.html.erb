<div class="container">
<div class="col-lg-12 col-sm-8">
   <div class="card hovercard">
      <div class="card-background">
         <img class="card-bkimg" alt="" src="/img/unnamed.png">
         <!-- http://lorempixel.com/850/280/people/9/ -->
      </div>
      <div class="useravatar">
         <img alt="" src="/img/ava.png">
      </div>
      <div class="card-info"> <span class="card-title"><b><%= current_user.name %></span>
      </div>
   </div>
   <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
      <div class="btn-group" role="group">
         <button type="button" id="stars" class="btn btn-default" href="#tab1" data-toggle="tab">
            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
            <div class="hidden-xs">
               <h4>Контейнер (<b style="color: green;">№10</b>) | Товаров (<b style="color: green;"><%= current_user.products.size %></b>)</h4>
            </div>
         </button>
         <%= link_to 'Выйти аккаунта', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
      </div>
   </div>
</div>

<center>
    <div class="row row-category">
      <div class="col-md-3">

        <h1> <b>Ваши товары</b> </h1>
        <hr></hr>
        <% current_user.products.each do |p| %>
      </div>
    </div>
 
    <div class="">
      <div class="col-md-4">
        <div class="thumbnail" style="border-radius: 28px; border: 4px solid silver;">
          <h1>
          <p>
          <%= link_to '', product_path(p.id), class: "glyphicon glyphicon-remove", method: :delete, data: {confirm: 'Вы уверены?'} %>
            |  
          <%= link_to '', edit_product_path(p.id), class: "glyphicon glyphicon-cog" %>
          </p>
          <p><h3><%= p.name %></h3></p>
          </h1>
          <b><%= link_to 'Посмотреть товар', product_path(p.id), class: 'btn btn-success', style: 'border-radius: 84px; background-color: rgba(192, 192, 192, 0.23); color: #060606;' %></b>
          </p>
          <p>
            <% if p.image == nil? %>
             <img href="/img/pr.png">
            <% else %>
             <%= image_tag p.image.url(:medium) %></p>
            <% end %>
          <p>
          <% end %>
        </div>
      </div>
    </div>

</center>
