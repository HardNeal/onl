<div class="container">
<div class="col-lg-12 col-sm-8">
   <div class="card hovercard">
      <div class="card-background">
         <img class="card-bkimg" alt="" src="/img/unnamed.png">
         <!-- http://lorempixel.com/850/280/people/9/ -->
      </div>
      <div class="useravatar">
         <img alt="" src="/img/ava.png">
      </div>
      <div class="card-info"> <span class="card-title"><b><%= current_user.name %></span>
      </div>
   </div>
   <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
      <div class="btn-group" role="group">
         <button type="button" id="stars" class="btn btn-default" href="#tab1" data-toggle="tab">
            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
        <% current_user.containers.each do |container| %>
            <div class="hidden-xs">
               <h4>Вы владелец контейнера (<b style="color: green;"><%= container.name %></b>) | Товаров (<b style="color: green;"><%= current_user.products.size %></b>)</h4>
            </div>
         </button>
         <%= link_to 'Выйти аккаунта', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>

      </div>
   </div>
</div>
<center>
    <div class="row row-category">
      <div class="col-md-3">
        <hr>

          <h5>
          <%= link_to "Добавить товар в #{container.name}", new_bazar_podrazdel_container_product_path(container.podrazdel.id, container, container.id), class: 'button7'  %>
          
          </h5>
          <% end %>
        <hr>
        
      </div>
    </div>

    <div class="">
    <% current_user.products.each do |p| %>
      <div class="col-md-4">
        <div class="thumbnail" style="border-radius: 28px; border: 4px solid silver; background: rgba(255, 255, 255, 0.69);">
          <h1>
          <p>
          <%= link_to '', bazar_podrazdel_container_product_path(p.container.podrazdel.id, p.container.podrazdel, p.container, p.id), class: "glyphicon glyphicon-remove", method: :delete, data: {confirm: 'Вы уверены?'} %>
            |  
          <%= link_to '',  edit_bazar_podrazdel_container_product_path(p.container.podrazdel.id, p.container.podrazdel, p.container, p.id), class: "glyphicon glyphicon-cog" %>
          </p>
          <p><div class="post-meta"><h4><b><%= p.name %></b></h4></div></p>
          </h1>
          <a><%= link_to 'Посмотреть товар', bazar_podrazdel_container_product_path(p.container.podrazdel.id, p.container.podrazdel, p.container, p.id) , class: "button24" %>
          </p>
          <p>
            <% if p.image == nil? %>
             <img href="/img/pr.png">
            <% else %>
             <%= image_tag p.image.url(:medium), style: 'border-radius: 15px;' %></p>
            <% end %>
          <p>
          
        </div>
      </div>
      <% end %>
    </div>
</center>

