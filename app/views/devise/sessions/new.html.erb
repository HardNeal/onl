<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<% flash.each do |key, value| %>
<div class="alert alert-default" role="alert">
  <div ><%= value %></div>
</div>
<% end %>

<div class="container">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Вход</h3>
        </div>
        <div class="panel-body">
          <form role="form">
            <div class="row">
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, class: 'form-control input-sm', placeholder: "Ваш e-mail" %>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: 'form-control input-sm', placeholder: "Пароль"  %>
              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <label>
                <input type="checkbox"><%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </label>
            </div>
            <% end %>
            <%= render "devise/shared/links" %>
            <%= f.submit "Войти", class: 'btn btn-info btn-block' %>
          </form>
        </div>
      </div>
    </div>
  </form>
</div>
</div>
<% end %>

