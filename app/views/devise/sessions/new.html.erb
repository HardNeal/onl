<center>
  <h2>Вход</h2>

  <% if flash[:register] %>
    <div class="alert alert-success" role="alert"><center><%= flash[:register] %></center></div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <% flash.each do |key, value| %>
       <div class="alert alert-default" role="alert">
        <div ><%= value %></div>
       </div>
    <% end %>

    <div class="form-group">
      <label for="exampleInputEmail1"><%= f.label :email%></label>
      <%= f.email_field :email, autofocus: true, class: 'form-control', style: 'width: 15%;' %>
    </div>

    <div class="form-group">
       <label for="exampleInputEmail1"><%= f.label :password %></label>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', style: 'width: 15%;' %>
    </div>

    <% if devise_mapping.rememberable? -%>
     <div class="checkbox">
      <label>
        <input type="checkbox"><%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
     </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-default' %>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
</center>

