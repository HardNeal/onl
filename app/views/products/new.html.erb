<center>
 <%= form_for [@bazar, @podrazdel, @container, @product] do |f| %>

 	<% flash.each do |key, value| %>
     <div class="alert alert-default" role="alert">
      <div ><%= value %></div>
     </div>
    <% end %>
      <hr></hr>
	<div class="field">
		<%= f.label :Название %><br />
		<%= f.text_field :name, class: "well" %>
	</div>

	</div>
		<%= f.hidden_field :user_id, :value => current_user.id %>
	<div class="field">

	<div class="field">
		<%= f.label :Описание %><br />
		<%= f.text_area :desc, class: "well" %>
	</div>

	<div class="field">
	   <%= f.collection_select :container_id, Container.all, :id, :name %>
	</div>
	
	<div class="field">   
		<%= f.label :Фото %>
		<%= f.file_field :image, class: "well" %>
	</div>
	<div><b>Картинки разрешеных форматов "jpeg, png, gif"</b></div>
	
	<hr></hr>
	<div class="actions">
        <%= f.submit "Опубликовать", class: "btn btn-success" %>
    	<%= link_to 'Отменить', profiles_path, class: "btn btn-danger" %>
    </div>
 <% end %>
</center>