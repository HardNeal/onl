<center>
 <%= form_for @bazar do |f| %>

 	<% flash.each do |key, value| %>
     <div class="alert alert-default" role="alert">
      <div ><%= value %></div>
     </div>
    <% end %>

      <hr></hr>
	<div class="field">
		<%= f.label :Название %><br />
		<%= f.text_field :name, class: "well" %>
	</div>

	<div class="field">   
		<%= f.label :Фото %>
		<%= f.file_field :image, class: "well" %>
	</div>
	<div><b>Картинки разрешеных форматов "jpeg, png, gif"</b></div>
	
	<hr></hr>
	<div class="actions">
        <%= f.submit "Опубликовать", class: "btn btn-default" %>
    </div>

    --->  <%= link_to 'Отменить', root_path %>
 <% end %>
</center>